<% if @main_table.persisted? %>
  $('#modal').modal('hide');
  setTimeout(function() {
    $('body').removeClass('modal-open'); // Remove class to allow scroll
    $('.modal-backdrop').remove(); // Remove backdrops
    Swal.fire({
      icon: 'success',
      title: '<%= t('standard.msg_success') %>',
      //text: 'Registro creado.',
      timer: 1500, // (1.5 seg)
      showConfirmButton: false
    }).then(function() {
      location.reload(); // Refresh the page after the alert is closed
    });
  }, 500); // Time animation to complete 
<% end %>
