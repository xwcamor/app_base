<% @list_array.each_with_index do |array,index| %>
<tr id="fila-<%= array.id %>">
  <td><%= index + 1 %></td>

  <td><%= array.app_system_name %></td>
    
  <td>
    <% if array.app_system_logo.present? %>
      <%= image_tag array.app_system_logo_url, class: "small-img" %>
    <% end %>
  </td>

  <td><%#= array.app_system_body_config %></td>

  <td>

    <% if current_account.has_permission?('show', 'Position') %>
      <a class="btn bg-info btn-sm" data-remote="true" href="<%= @main_url %>/<%= array.id %>" title="Mostrar" data-toggle="modal" data-target="#main_modal">
        <i class="fas fa-eye"></i>  
      </a>
    <% end %>

    <% if current_account.has_permission?('edit', 'Position') %>
      <a class="btn btn-warning btn-sm text-white" data-remote="true" href="<%= @main_url %>/<%= array.id %>/edit" data-toggle="modal" data-target="#main_modal">
        <i class="fas fa-pencil-alt"></i>  
      </a>
    <% end %>

    <% if current_account.has_permission?('delete', 'Position') %>
      <a class="btn bg-danger btn-sm" data-remote="true" href="<%= @main_url %>/<%= array.id %>/delete" style="display: none">
        <i class="fas fa-trash"></i>  
      </a>
    <% end %>
  </td>
</tr>
<% end %>