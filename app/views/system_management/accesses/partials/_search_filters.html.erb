<%= search_form_for @query, url: @main_url.to_s + "/search",:html=>{:autocomplete=>"off", method: 'post', remote: false }  do |f|%> 

<div class="row justify-content-center">
  <div class="col-lg-6">
  	<div class="form-group mb-2">
  	  <%= dynamic_translation('resource_name') %>
  	  <%= f.text_field :resource_name_cont, class: "form-control", placeholder: "#{t('standard.input_required')} #{t("#{controller_name}.resource_name")}" %>
  	</div>
  </div>

  <div class="col-lg-6">
    <div class="form-group mb-2">
      <%= dynamic_translation('action_name') %>
      <%= f.text_field :action_name_cont, class: "form-control", placeholder: "#{t('standard.input_required')} #{t("#{controller_name}.action_name")}" %>
    </div>
  </div>

  <div class="col-lg-12 text-center pt-2">
    <%= f.button :submit, class: "btn bg-navy", title: t('standard.btn_search') do %>
      <i class="fas fa-search"></i> <%= t('standard.btn_search') %>
    <% end %>
    <a href="<%= @main_url %>" class="btn bg-secondary" title="<%= t('standard.btn_clear') %>"><i class="fas fa-brush"></i> <%= t('standard.btn_clear') %></a>
  </div> 

</div>

<% end %>