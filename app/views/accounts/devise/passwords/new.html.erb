<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-warning text-white">
          <h3><%= t('.sign_in', default: 'Login') %></h3>
        </div>
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <%= image_tag asset_path('logo.jpg'), alt: 'PollerÃ­a', class: 'img-fluid' %>
          </div>
          <%#= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :post }) do |f| %>

            <%= devise_error_messages! %>
            <%#= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, t('.email', default: 'Usuario'), class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('.enter_email', default: 'Ingresa Usuario'), required: true %>
              <div class="invalid-feedback">
                <%= t('.enter_email', default: 'Ingresa usuario.') %>
              </div>
            </div>
 

            <div class="d-flex justify-content-between pt-4">
              <%= f.submit t('.log_in', default: 'Enviar CLave'), class: "btn btn-primary" %>
              <%= link_to t('.forgot_password', default: 'Regresar'), root_path(resource_name), class: "btn btn-link" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>

<style>
  body {
    background: url(<%= asset_path('background.jpg') %>) no-repeat center center fixed;
    background-size: cover;
  }

  .card {
    background: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 767.98px) {
    .container {
      padding-left: 15px;
      padding-right: 15px;
    }
  }
</style>
